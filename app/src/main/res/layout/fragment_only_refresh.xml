<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.insightsurface.lib.widget.bar.TopBar
        android:id="@+id/refresh_frgament_topbar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        app:left_background="@drawable/nav_back_icon"
        app:title_text="标题"
        app:title_textColor="@color/main_text_color"/>

    <include
        layout="@layout/activity_only_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/refresh_frgament_topbar"></include>
</RelativeLayout>
